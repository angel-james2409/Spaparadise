
@model SpaParadise.Models.Customer

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@using (Html.BeginForm("Login", "Customer", FormMethod.Post))
{

    <table>
        <tr>
            <td></td>
            <td style="text-decoration:underline">Welcome Spa Paradise</td>
        </tr>
        <tr>
            <td></td>
            <td>Customer Login</td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(Model => Model.PhoneNo)
            </td>
            <td>
                @Html.EditorFor(Model => Model.PhoneNo)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.PhoneNo)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(Model => Model.Password)
            </td>
            <td>
                @Html.EditorFor(Model => Model.Password)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" name="name" value="Login" />
                <input type="reset" name="name" value="clear" />
            </td>
        </tr>
    </table>
}


